<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  <TextView android:id="@+id/edit_workout_name_lbl" android:text="Workout Name:" android:layout_width="wrap_content" android:layout_height="wrap_content" />
  <EditText android:id="@+id/edit_workout_workout_name_txt" android:layout_below="@id/edit_workout_name_lbl" android:layout_width="fill_parent" android:layout_height="wrap_content" />
  <Button android:id="@+id/edit_workout_save_btn" android:layout_below="@id/edit_workout_workout_name_txt" android:text="Save" android:layout_width="wrap_content" android:layout_height="wrap_content" />
  <Button android:id="@+id/edit_workout_cancel_btn" android:text="Cancel" android:layout_toRightOf="@id/edit_workout_save_btn"  android:layout_below="@id/edit_workout_workout_name_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</RelativeLayout>
