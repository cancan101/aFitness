<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/recordBox" android:background="#0000aa" android:orientation="vertical" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:layout_weight="1">
			<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="fill_parent">

				<LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1">
					<TextView android:id="@+id/weightLbl" android:text="weight" android:layout_height="wrap_content" android:layout_width="wrap_content" />
					<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal">
						<EditText android:id="@+id/weightEntryTxt" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1"
							android:gravity="bottom" android:inputType="numberDecimal|number" />
						<TextView android:text="lbs" android:layout_height="wrap_content" android:layout_width="wrap_content" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1">
					<TextView android:id="@+id/repsLbl" android:text="repetitions" android:layout_height="wrap_content" android:layout_width="wrap_content" />
					<EditText android:id="@+id/repsEntryTxt" android:layout_height="wrap_content" android:layout_width="fill_parent" android:inputType="number" />
				</LinearLayout>
				<FrameLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_gravity="center">
<ImageButton android:id="@+id/historyBtn" android:layout_gravity="center" android:background="@android:color/transparent"
					 android:padding="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/history"
					android:scaleType="centerInside" android:adjustViewBounds="true" />
					</FrameLayout>					
			</LinearLayout>
			<TextView android:id="@+id/notesLbl" android:text="notes (optional)" android:layout_height="wrap_content" android:layout_width="wrap_content" />
			<EditText android:id="@+id/notesTxt" android:layout_height="wrap_content" android:layout_width="fill_parent" android:inputType="text" />
			<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal">
				<Button android:id="@+id/recordBtn" android:text="Record" android:layout_height="fill_parent" android:layout_width="wrap_content" android:layout_weight="1" />
				<!--<FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="10dp" android:layout_gravity="center">
				<ImageButton android:id="@+id/restTimerBtn" android:layout_gravity="center" android:background="@android:color/transparent"
					 android:padding="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clock"
					android:scaleType="centerInside" android:adjustViewBounds="true" />
				--><Button android:id="@+id/restTimerBtn" android:text="Timer" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:drawableRight="@drawable/clock" android:drawablePadding="4dp" />
				<!--</FrameLayout>	
			--></LinearLayout>
			<!--

				<FrameLayout android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content"> <Button android:text="Rep"
				android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/clock" /> </FrameLayout>
			-->
		</LinearLayout>

	</LinearLayout>
	<ListView android:id="@android:id/list" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"
 android:choiceMode="none" android:background="#D1D1D1" android:cacheColorHint="#D1D1D1" />

</LinearLayout>
